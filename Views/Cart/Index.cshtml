@model WebApplication5.Models.Cart
@using WebApplication5.Models.Entity
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="row">
    <div class="span12">
        <ul class="breadcrumb">
            <li><a href="/Home/Index">Anasayfa</a> <span class="divider">/</span></li>
            <li class="active">Sepet</li>
        </ul>
        <div class="well well-small">
            @if (Model.CartLines.Count > 0)
            {



                <table class="table table-bordered table-condensed">
                    <thead>
                        <tr>
                            <th>Resim</th>
                            <th>Adı</th>
                            <th>Açıklama </th>
                            <th>Ader</th>
                            <th>Fiyat</th>
                            <th>Toplam Fİyat </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CartLines)
                        {
                            <tr>
                                <td><img width="100" src="~/Content/images/@item.Urunler.urunresim" alt=""></td>
                                <td>@item.Urunler.urunad</td>
                                <td> @item.Urunler.urunaciklama </td>
                                <td>@item.Quantity </td>
                                <td>@item.Urunler.urunfiyat ₺</td>
                                <td>
                                    @((item.Urunler.urunfiyat * item.Quantity).ToString())
                                </td>
                                <td>
                                    <button type="submit" class="btn btn-default">
                                        @Html.ActionLink("SİL", "RemoveFromCart", "Cart", new { id = @item.Urunler.urunid }, null)
                                    </button>
                                   
                                </td>
                            </tr>
                        }
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th class="label label-warning" style="display:block; color:white;">Toplam Tutar : @Model.Total().ToString("c")</th>
                            <th></th>
                        </tr>
                    </tbody>
                </table><br>
            }
            else
            {
                <div class="alert alert-warning">
                    <p>
                        Sepetinizde Ürün Bulunmamaktadır...
                    </p>
                </div>}

            <a href="/Home/Product" class="shopBtn btn-large"><span class="icon-arrow-left"></span> Alışverişe Devam Et  </a>
            @*<a href="/Cart/Checkout" class="shopBtn btn-large pull-right">Sipariş Ver <span class="icon-arrow-right"></span></a>*@

        </div>
    </div>
</div>