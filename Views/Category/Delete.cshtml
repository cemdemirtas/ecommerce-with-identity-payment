@model WebApplication5.Models.Entity.tbl_kategori
@using WebApplication5.Models.Entity
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Delete</h2>
<section class="content">
    <h3>&emsp; &emsp;<font face="tahoma" size="5" color="red"> @Model.kategoriad </font>kategorisini silmek istediğinize emin misiniz?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Kategori Adı  =
            </dt>
            <dd>
                @Html.DisplayFor(model => model.kategoriad)
            </dd>
            @*<dt>
                Açıklama  =
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>*@
        </dl>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="container">
                <div class="form-actions no-color">
                    <input type="submit" value="Sil" class="btn btn-danger" /> |
                    @Html.ActionLink("Kategorilere Dön", "Index", null, new { @class = "btn btn-warning" })
                </div>
            </div>}
    </div>
</section>
